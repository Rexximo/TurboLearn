<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_container"
    android:layout_width="0dp"
    android:layout_height="120dp"
    android:layout_weight="1"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background silhouette image -->
        <ImageView
            android:id="@+id/imageViewCategorySilhouette"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:alpha="0.15"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_category_other_silhouette"
            tools:src="@drawable/ic_category_other_silhouette" />

        <!-- Content container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Completed task count -->
            <TextView
                android:id="@+id/completed_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"
                tools:text="5" />

            <!-- Category name -->
            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="2dp"
                tools:text="Personal" />

            <!-- Completed label -->
            <TextView
                android:id="@+id/completed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                tools:text="Selesai" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>